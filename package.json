{
  "name": "svelte-uswds",
  "version": "1.2.1",
  "license": "MIT",
  "description": "Svelte component library that implements the U.S. Web Design System",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "./src/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./src/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "prepack": "prettier --write 'src/*.svelte' && node build.js",
    "lint": "prettier --check --cache 'src/*.svelte'",
    "build": "node build.js"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@tsconfig/svelte": "^5.0.0",
    "esbuild": "^0.23.0",
    "esbuild-svelte": "^0.8.1",
    "prettier": "3.3.0",
    "prettier-plugin-svelte": "3.2.3",
    "svelte": "^3.29.7",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-uswds.git"
  },
  "homepage": "https://github.com/metonym/svelte-uswds",
  "bugs": "https://github.com/metonym/svelte-uswds/issues",
  "keywords": [
    "svelte",
    "U.S. Web Design System",
    "uswds",
    "design system",
    "component library"
  ],
  "files": [
    "lib",
    "src",
    "types"
  ],
  "engines": {
    "node": ">=14"
  }
}
